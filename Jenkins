pipeline{
    agent any
    stages{
        stage('checkout the cod'){
            steps{
                 git url: 'https://github.com/Shreyas0901/star-agile-health-care/'
                 echo 'github url checkout'
            }
        }
        stage('codecompile'){
            steps{
                echo 'starting compiling'
                sh 'mvn compile'
            }
        }
        stage('codetesting'){
            steps{
                sh 'mvn test'
            }
        }
        stage('qa'){
            steps{
                sh 'mvn checkstyle:checkstyle'
            }
        }
        stage('package'){
            steps{
                sh 'mvn package'
            }
        }
        stage('run dockerfile'){
          steps{
               sh 'docker rmi myimg'
               sh 'docker build -t myimg .'
           }
         }
        stage('port expose'){
            steps{
                sh 'docker stop c000'
                sh 'docker rm c000'
                sh 'docker run -dt -p 8081:8081 --name c000 myimg'
            }
        }
   
    }
}
